  <div class="container">
    <div class="row justify-content-end">
      <!-- Contact wrapper -->
      <div class="col-xl-8 col-lg-9">
        <div class="contact-form-wrapper">
          <!-- From tittle -->
          <div class="row">
            <div class="col-lg-12">
              <!-- Section Tittle -->
              <div class="section-tittle mb-50">
                <span>Get a Qote For Free</span>
                <h2>Request a Free Quote</h2>
                <p>
                  Brook presents your services with flexible, convenient and
                  cdpose layouts. You can select your favorite layouts &
                  elements for.
                </p>
              </div>
            </div>
          </div>
          <!-- form -->
          <form method="post" class="contact-form" id="quotationForm">
            <div class="row">
              <div class="col-lg-6 col-md-6">
                <div class="input-form">
                  <label for="name" class="form-label" visible="false"></label>
                  <input
                    type="text"
                    placeholder="Name"
                    class="form-control"
                    id="name"
                    required
                  />
                </div>
              </div>
              <div class="col-lg-6 col-md-6">
                <div class="input-form">
                  <label for="email" class="form-label" visible="false"></label>
                  <input
                    type="email"
                    placeholder="Email"
                    class="form-control"
                    id="email"
                    required
                  />
                </div>
              </div>
              <div class="col-lg-12">
                <div class="input-form">
                  <input
                    type="tel"
                    pattern="^\s*\(?(020[7,8]{1}\)?[ ]?[1-9]{1}[0-9{2}[ ]?[0-9]{4})|(0[1-8]{1}[0-9]{3}\)?[ ]?[1-9]{1}[0-9]{2}[ ]?[0-9]{3})\s*$"
                    class="form-control"
                    id="Telephone"
                    aria-describedby="telephoneHelp"
                    placeholder="Enter telephone: 07791XXXXX"
                    required
                  />
                </div>
              </div>
              <div class="col-lg-6">
                <div class="select-items">
                  <select id="select1">
                    <option value="Type of Services">Type of Services</option>
                    <option value="Urgent Delivery Services"
                      >Urgent Delivery Services</option
                    >
                    <option value="Pick Up within 90 Mins"
                      >Pick Up within 90 Mins</option
                    >
                    <option value="Next Day Delivery Services"
                      >Next Day Delivery Services</option
                    >
                    <option value="Long-Term Services"
                      >Long-Term Services</option
                    >
                    <option value="Same Day Delivery Services"
                      >Same Day Delivery Services</option
                    >
                    <option value="Customized Requests"
                      >Customized Requests</option
                    >
                  </select>
                </div>
              </div>
              <div class="col-lg-6 col-md-6">
                <div class="input-form">
                  <input
                    id="departureCity"
                    type="text"
                    placeholder="City of Departure"
                  />
                </div>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="input-form">
                  <input id="postCode" type="text" placeholder="Postcode" />
                </div>
              </div>
              <div class="col-lg-6 col-md-6 col-sm-6">
                <div class="input-form">
                  <input id="weight" type="text" placeholder="Weight" />
                </div>
              </div>
              <!-- Height Width length -->
              <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="input-form">
                  <input id="height" type="text" placeholder="Height" />
                </div>
              </div>
              <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="input-form">
                  <input id="width" type="text" placeholder="Width" />
                </div>
              </div>
              <div class="col-lg-4 col-md-6 col-sm-6">
                <div class="input-form">
                  <input id="length" type="text" placeholder="length" />
                </div>
              </div>
              <!--Van Type-->
              <div class="col-lg-12">
                <div class="select-items">
                  <select id="select2">
                    <option value="">Type of Vehicle</option>
                    <option value="Bike">Bike</option>
                    <option value="Car">Car</option>
                    <option value="Small Wheel Base">Small Wheel Base</option>
                    <option value="Medium Wheel Base">Medium Wheel Base</option>
                    <option value="Long Wheel Base">Long Wheel Base</option>
                  </select>
                </div>
              </div>
